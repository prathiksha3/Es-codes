#include<LPC21XX.H>
unsigned int delay;
unsigned int SwitchCount=0;
unsigned disp[16]={0X003F0000,0X00600000,0X005B0000,0X004F0000,0X00660000,0X006D0000,0X007D0000,0X00700000,0X007F0000,0X006F0000,0X00770000,0X007C0000,0X005E0000,0X00790000,0X00710000};
#define DISPSEL1 0X10000000;
#define DISPSEL2 0X20000000;
#define DISPSEL3 0X40000000;
#define DISPSEL4 0X80000000;
#define ALLDISP  0XF0000000;
#define DATPORT  0X00FF00000;
int main(void){
	PINSEL0=0X00000000;
	PINSEL1=0X00000000;
	IO0DIR=0XF0FF000;
	IO1DIR=0X00000000;
	while(1){
		IO0SET|=ALLDISP;
		IO0CLR=0X00FF0000;
		IO0SET=disp[SwitchCount];
		if(!IO0PIN&0X00800000)
		{
			for(delay=0;delay<100000;delay++)
			{}
				if(!IO0PIN&0X00800000)
				{
					SwitchCount++;
					if(SwitchCount==0X10)
					{
						SwitchCount=0;
						IO0CLR=0XF0FF0000;
					}
				}
			}
		}
	}
	
		
	
